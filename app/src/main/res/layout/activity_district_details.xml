<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/page_background"
        android:fitsSystemWindows="true"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_round_close_24"
            android:tint="@color/toolbar_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/text_primary"
            android:textSize="28sp"
            app:fontFamily="@font/open_sans_semibold"
            app:layout_constrainedWidth="true"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/indicator_layout"
            app:layout_constraintTop_toBottomOf="@+id/iv_close"
            tools:text="Madhya Pradesh" />

        <LinearLayout
            android:id="@+id/indicator_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@+id/title"
            app:layout_constraintBottom_toBottomOf="@+id/last_update"
            app:layout_constraintRight_toRightOf="parent">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/iv_zone"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_round_radio_button_checked_24" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_zone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/open_sans_semibold"
                app:fontFamily="@font/open_sans_semibold"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title"
                tools:text="Red Zone" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/last_update"
            style="@style/TextAppearance.Toolbar.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            tools:text="12 Apr 2020" />

        <include
            android:id="@+id/cases_layout"
            layout="@layout/layout_cases_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/last_update" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>